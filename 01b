%{
#include<stdio.h>
#include "y.tab.h"
%}
%%
a {return A;}
b {return B;}
\n {return 0;}
. {return yytext[0];}
%%

---------------------------------------

%{
#include <stdio.h>
int aCount=0, n;
%}

%token A
%token B

%%
S : X B { if(aCount>n||aCount<n) YYFAIL(); }
X : X T | T
T : A { aCount++;}
  ;
%%
int main()
{
	printf("Enter the value of n \n");
	scanf("%d",&n);
	printf("Enter the string:");
	yyparse();
	printf("Valid string\n");
}

int YYFAIL()
{
	printf("Invalid count of 'a'\n");
	exit(0);
}

int yyerror()
{ 
	printf("Invalid string\n");
	exit(0);
}
